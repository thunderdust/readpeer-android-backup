<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFF0"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/profile_bookCoverView"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:background="#F2FFF0"
        android:scaleType="fitCenter" />
    <TextView
        android:id="@+id/profile_bookDetailText"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="left"
        android:text="Easy Come and Easy Go"
        android:textColor="#00CD00"
        android:textSize="13sp" >
    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_margin="10dp" >
        <Button
            android:id="@+id/profile_download_book_button"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="10dp"
            android:background="#00CD00"
            android:text="Download"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" >
        </Button>
    </LinearLayout>
</LinearLayout>