<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#98FB98"
    android:baselineAligned="false"
    android:paddingTop="5dp"
    android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="135dp"
        android:layout_margin="1dp"
        android:background="#00CD66"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/imageView_Avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal" />
        <EditText
            android:id="@+id/editText_Username"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="user1"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="135dp"
        android:layout_margin="1dp"
        android:layout_weight="4"
        android:background="#FFFFF0"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="5dp" >
        <LinearLayout
            android:id="@+id/statistic_annotation"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_margin="1dp"
            android:layout_marginTop = "15dp"
            android:layout_weight="1"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/text_numOAnnotations"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:background="@drawable/backwithborder"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/text_annotations"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp"
                android:background="@drawable/backwithborder2"
                android:gravity="center_horizontal"
                android:padding="1dp"
                android:text="Note"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/statistic_book"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/text_numOBooks"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:background="@drawable/backwithborder"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/text_books"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="1dp"
                android:background="@drawable/backwithborder2"
                android:gravity="center_horizontal"
                android:padding="1dp"
                android:text="Book"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/statistic_following"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/text_numOFollowing"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:background="@drawable/backwithborder"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/text_following"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="1dp"
                android:background="@drawable/backwithborder2"
                android:gravity="center_horizontal"
                android:padding="1dp"
                android:text="Follow"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/statistic_follower"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/text_numOFollower"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:background="@drawable/backwithborder"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/text_follower"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="1dp"
                android:background="@drawable/backwithborder2"
                android:gravity="center_horizontal"
                android:padding="1dp"
                android:text="Follower"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>